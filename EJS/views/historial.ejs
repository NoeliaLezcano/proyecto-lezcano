<h2 style="color:blue;">Vista de Productos</h2>

<% const hayProducto=productos.length> 0; %>
    <% if(hayProducto){ %>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;">
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
                <% for (const producto of productos) {%>
                    <tr>
                        <td>
                            <%=producto.nombre%>
                        </td>
                        <td>
                            <%=producto.precio%>
                        </td>
                        <td>
                            <img src="<%=producto.foto%>">
                        </td>
                    </tr>
                    <%};%>
            </table>
        </div>
        <% } else{ %>
            <h3 class="alert alert-danger">no se encontraron datos</h3>
            <% } %>
        
            <a href="/">
                <input type="button" value="Volver al formulario">
            </a>